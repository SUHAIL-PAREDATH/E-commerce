<!-------------Modal for add banner ---------------->
<div class="container d-flex justify-content-center my-3">
      
    <button
        type="button"
        class="btn btn-dark text-center"
        data-bs-toggle="modal"
        data-bs-target="#exampleModal"
      >
        Add New Banner
      </button>
    </div>
    <span
      class="text-center pb-3"
      style="font-size: 0.8rem; text-transform: none"
      >
      <p class="text-danger mt-0 fw-bold text-uppercase">
        <%= locals.errorMessage %>
      </p>
    </span>

    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
      data-bs-backdrop="static"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">
              Add New Banner
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
              
              <!-- -------------------- -->


              <form action="" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="thumbnail" class="px-1" style="font-size: 0.75rem;">Upload Image</label>
                  <input
                    class="form-control"
                    id="form-holder"
                    name="bannerImage"
                    type="file"
                    onchange="bannerPreview(event)"
                  />
                  <div>
                    <p><img src="" alt="" style="width: 150px;" id="banner-preview"></p>
                  </div>
                </div>

                  <div class="mb-3">
                      <input
                        type="text"
                        class="form-control"
                        id="form-holder"
                        placeholder="Title"
                        name="title"
                        required
                        
                      />
                     
                    </div>
                 
                  <div class="mb-3">
                      <input
                        type="text"
                        class="form-control"
                        id="form-holder"
                        placeholder="Descrpition"
                        name="description"
                      />
                    </div>
                  <div class="mb-3">
                      <input
                        type="text"
                        class="form-control"
                        id="form-holder"
                        placeholder="URL"
                        name="url"
                      />
                    </div>
                    <div class="mb-3">
                      <input
                        type="text"
                        class="form-control"
                        id="form-holder"
                        placeholder="Video URL"
                        name="videoURL"
                      />
                    </div>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button type="submit" class="btn btn-success">
                  Save changes
                </button>
                </form>


<!-- ------------------- -->
          
          </div>
        </div>
      </div>
    </div>
