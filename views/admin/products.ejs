                <%- include('./partials/head') -%>

                <!-- =====================product add modal========== -->
                  <!-- Button trigger modal -->
                        <div class="container d-flex justify-content-center my-3">
                            <button
                            type="button"
                            class="btn btn-dark text-center"
                            data-bs-toggle="modal"
                            data-bs-target="#exampleModal"
                            >
                            Add New Product
                            </button>
                        </div>
                         <!-- Modal -->
      <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
      data-bs-backdrop="static"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">
              Add New Product
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
              
              <!-- -------------------- -->


              <form action="/admin/products/add_product" method="post" enctype="multipart/form-data">
                  <div class="mb-3">
                    <input
                      type="text"
                      class="form-control"
                      id="form-holder"
                      name="name"
                      placeholder="Name"
                      required
                    />
                  </div>
                  <div class="mb-3">
                      <label for="thumbnail" class="px-1" style="font-size: 0.75rem;">Upload thumbnail</label>
                    <input
                      class="form-control"
                      id="thumbnail"
                      name="thumbnail"
                      type="file"
                      required
                    />
                  </div>
                  <div class="mb-3">
                    <label for="frontImage" class="px-1" style="font-size: 0.75rem;">Upload Front Image</label>
                  <input
                    class="form-control"
                    id="frontImage"
                    name="frontImage"
                    type="file"
                    required
                  />
                </div>
                  <div class="mb-3">
                    <label for="images" class="px-1" style="font-size: 0.75rem;">Upload 3 Images</label>
                  <input
                    class="form-control"
                    id="images"
                    name="images"
                    type="file"
                    multiple
                  />
                </div>
                  <div class="mb-3">
                    <select id="inputState" class="form-control" name="category"> 
                      <option selected>Choose category</option> 
                      <%categories.forEach((data)=>{%> 
                        <option value="<%=data._id%>"><%=data.name%></option> 
                      <%})%> 
                    </select>
                  </div>
                  <div class="mb-3">
                    <select id="brand" class="form-control" name="brand"  required> 
                        <option value=""  style="color: rgb(66, 61, 61);">Choose brand</option> 
                        <%brands.forEach((data)=>{%> 
                          <option style="color: rgb(66, 61, 61);" value="<%=data._id%>"><%=data.name%></option> 
                        <%})%> 
                      </select>
                  </div>
                  <div class="mb-3">
                      <input
                        type="text"
                        class="form-control"
                        id="color"
                        placeholder="Color"
                        name="color"
                        required
                      />
                    </div>
                  <div class="mb-3">
                      <input
                        type="number"
                        class="form-control"
                        id="price"
                        placeholder="initialPrice"
                        name="price"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <input
                        type="number"
                        class="form-control"
                        id="price"
                        placeholder="Offer Price"
                        name="price"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <input
                        type="number"
                        class="form-control"
                        id="stock"
                        placeholder="Stock"
                        name="stock"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <input
                        type="number"
                        class="form-control"
                        id="referenceNumber"
                        placeholder="Reference Number"
                        name="referenceNumber"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <input
                        type="text"
                        class="form-control"
                        id="caseMaterial"
                        placeholder="Case Material"
                        name="caseMaterial"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <input
                        type="text"
                        class="form-control"
                        id="waterResistance"
                        placeholder="Water Resistance"
                        name="waterResistance"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <input
                        type="text"
                        class="form-control"
                        id="movement"
                        placeholder="Movement"
                        name="movement"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <input
                        type="text"
                        class="form-control"
                        id="warranty"
                        placeholder="warranty"
                        name="warranty"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <input
                        type="text"
                        class="form-control"
                        id="strapMaterial"
                        placeholder="strap Material"
                        name="strapMaterial"
                        required
                      />
                    </div>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button type="submit" class="btn btn-success">
                  Save changes
                </button>
                </form>


<!-- ------------------- -->
          
          </div>
        </div>
      </div>
    </div>
