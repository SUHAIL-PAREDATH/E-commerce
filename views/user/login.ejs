<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" type="image/jpg" href="/public/img/timeless-favicon.png">
    <title>TimeTrone / <%=documentTitle%></title>

    <!-- Custom fonts for this template-->
	<link rel="icon" type="image/png" href="/images/icons/mc-logo-letter-design-vector-14081808.jpg">

    <link href="/public/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="public/admin/css/sb-admin-2.css" rel="stylesheet">

    	<!-- BOOTSTRAP -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

</head>

<body class="bg-light">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">LOGIN</h1>
                                    </div>
                                    <form class="user" method="post" action="/login" >
                                        <div class="form-group">
                                            <input name="email" type="email"
                                             class="form-control form-control-user"
                                             id="inputemail" 
                                             aria-describedby="emailHelp"
                                             placeholder="Enter Email Address..."
                                             onkeyup="mailcheck()">
                                             <span
                                             id="validmssg"
                                             class="text-danger rounded"
                                             style="font-size: 0.75rem; text-transform: none"></span>
                                        </div>
                                        <div class="form-group">
                                            <input 
                                            name="password" 
                                            type="password"
                                            id="inputpass"
                                            class="form-control form-control-user" 
                                            placeholder="Password"
                                            onkeyup="passwordInvalid()" 
                                            required>
                                            <span
                                            id="passvalid"
                                            class="text-danger rounded"
                                            style="font-size: 0.75rem; text-transform: none"></span>
                                        </div>
                                        <p class="text-center " style="color:red">
                                        <%=locals.errorMessage%>
                                        </p>

                                        <input type="submit" 
                                        value="Login" 
                                        class="btn btn-dark btn-user btn-block"
                                        id="submitBtn">

                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small " href="/forgetPassword">Forgot Password?</a>
                                    </div>
                                </div>
                            </div>
                            <div class=" col-lg-6 d-none d-lg-block p-5">
                                <div class="new-customer">
                                    <div class="new-customer-head">
                                        <h4>New Customer</h4>
                                    </div>
                                    <div class="new-customer-para">
                                        <p>Sign up for early Sale access plus tailored new
                                            arrivals, trends and promotions. To opt out ,
                                            click unsubscribe in our emails.</p>
                                    </div>
                                    <div class="new-customer-btn">
                                        <a href="/register" class=" btn btn-dark btn-user btn-block">CREATE AN
                                            ACCUONT</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function mailcheck(){
            const inputMail=$('#inputemail').val();
            if(inputMail.match(/^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/)
            ){
                $('#submitBtn').prop("disabled",false)
                $("#validmssg").empty();
        }else{
            $('#submitBtn').prop("disabled",true)
            $("#validmssg").html('<i class="fa fa-exclamation"></i>Invalid E-mail');
        }
        }

        function passwordInvalid(){
            const inputPass=$('#inputpass').val()
            if(inputPass.match(/^(?=.*?[A-Za-z])(?=.*?[0-9]).{8,}$/)){
                $("#passvalid").empty()
            }else{
                $("#passvalid").html("<i class='fa fa-times'></i>Password must contain atleast a number and an alphabet")
            }
        }
    </script>
    <!-- Bootstrap core JavaScript-->
    <script type="text/javascript" src="/public/admin/vendor/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="/public/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script type="text/javascript" src="/public/admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script type="application/json"  src="/public/admin/js/sb-admin-2.min.js"></script>

    <!-- bootstrap -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>


</body>

</html>